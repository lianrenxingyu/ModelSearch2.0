<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.chenggong.modelsearch2_0">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.chenggong.modelsearch2_0.aty.MainActivity" />
        <activity android:name="com.chenggong.modelsearch2_0.aty.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.chenggong.modelsearch2_0.aty.LoginActivity" />
        <activity android:name="com.chenggong.modelsearch2_0.aty.RegisterActivity" />
        <!--windowSoftInputMode 属性设置,
        adjustNothing:当输入法弹出的时候,空间布局不上移
        stateVisible :弹出输入法键盘-->
        <activity
            android:name="com.chenggong.modelsearch2_0.aty.ResultActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustNothing|stateVisible" />
        <activity android:name="com.chenggong.modelsearch2_0.aty.WebPageActivity"></activity>
    </application>

</manifest>